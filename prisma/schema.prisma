// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int @id @default(autoincrement())
  name      String
  email     String @unique
  password  String
  photo     String?
  role      String
  musics    UserMusic[]
}

model Music {
  id        Int @id @default(autoincrement())
  name      String
  genre     String
  album     String

  artist    Artist @relation(fields:[artistId], references:[id])
  artistId  Int @unique
  streams   UserMusic[]
}

model Artist {
  id        Int @id @default(autoincrement())
  name      String
  photo     String?
  streams   String
  musics    Music[]
}

model UserMusic {
  user      User @relation(fields: [userId], references: [id])
  userId    Int
  music   Music @relation(fields: [musicId], references: [id])
  musicId Int 
  @@id([userId, musicId])
}