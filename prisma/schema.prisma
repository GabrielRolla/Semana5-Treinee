// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "mysql"
  url      = "file:./dev.db"
}

model User {
  id        Int @id @default(autoincrement())
  name      String
  email     String @unique
  password  String
  photo     String?
  role      String

  musics    Music[]
}

model Music {
  id        Int @id @default(autoincrement())
  name      String
  genre     String
  album     String

  artist    Artist @relation(fields:[artistId], references:[id])
  artistId  Int @unique

  users     User[]
}

model Artist {
  id        Int @id @default(autoincrement())
  name      String
  photo     String?
  streams   String

  musics    Music[]
}